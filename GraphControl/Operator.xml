<?xml version="1.0" encoding="utf-8" ?>
<!-- Setting for operator panel -->
<operator>
  <!-- Operator Panel window settings -->
  <screen>
    <width> 640 </width>
    <height> 480 </height>
  </screen>

  <!-- Objects - devices being displayed on screen -->
  <objects>
    <object
      id="Switch1"
      width="100"
      height="100"
      posx="280"
      posy="250"
      interface="Switch1" />

    <object
      id="Server1"
      width="100"
      height="100"
      posx="80"
      posy="250"
      interface="Server1" />

    <object
      id="Server2"
      width="100"
      height="100"
      posx="480"
      posy="250"
      interface="Server2" />

    <object
      id="Server3"
      width="100"
      height="100"
      posx="280"
      posy="60"
      interface="Server3" />
  </objects>

  <!-- Edges connecting objects -->
  <edges>
    <edge>
      <!-- Objects connected by edge -->
      <connecting
        pointA="Switch1"
        pointB="Server3" />

      <!-- Lines drawing edge -->
      <line
        beginx="330"
        beginy="300"
        endx="330"
        endy="110" />

      <!-- TODO styles -->
    </edge>

    <edge>
      <connecting
        pointA="Switch1"
        pointB="Server1" />

      <line
        beginx="330"
        beginy="300"
        endx="130"
        endy="300" />
    </edge>

    <edge>
      <connecting
        pointA="Switch1"
        pointB="Server2" />

      <line
        beginx="330"
        beginy="300"
        endx="530"
        endy="300" />
    </edge>
  </edges>
</operator>